@{
}
@model List<BookManagerApp.Models.Book>

@{
    ViewData["Title"] = "Book List";
}

<h1>Book List</h1>
<form method="get" asp-action="List">
    <input type="text" placeholder="Search by Title or Name" name="SearchTerm"  />
    <button type="submit" class="btn btn-primary">Search</button>
    <a  asp-action="List" class="btn btn-secondary">Show All</a>
</form>
<p>
    Sort By: 
    <a asp-action="List" asp-route-SortOrder="title_desc">Title ↓</a> |
    <a asp-action="List" asp-route-SortOrder="author_asc">Author ↑</a> |
    <a asp-action="List" asp-route-SortOrder="price_desc">Price ↓</a> 

</p>
<a asp-action="Create" class="btn btn-primary">Create</a>
<table class="table">
    <thead>

        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Price</th>
            <th>PublishedDate</th>
            <th>Actions</th>
        </tr>

    </thead>
    <tbody>
       @foreach(var book in Model){
            <tr>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>@book.Price.ToString("C")</td>
            <td>@book.PublishedDate.ToShortDateString()</td>
            <td>
               <button asp-action="Edit" asp-route-id="@book.Id" class="btn btn-outline-primary">
                   Edit
               </button>
                   <a asp-action="Delete" asp-controller="Books" asp-route-id="@book.Id" class="btn btn-outline-danger">
                       Delete
                   </a>
            </td>
            </tr>
        }
    </tbody>

</table>

<div>
    <a asp-action="List" asp-route-PageNumber="@(ViewBag.PageNumber - 1)"
       asp-route-SearchTerm="@ViewBag.SearchTerm"
       asp-route-SortOrder="@ViewBag.SortOrder">Prev</a>
    <a asp-action="List"
       asp-route-PageNumber="@(ViewBag.PageNumber + 1)"
       asp-route-SearchTerm="@ViewBag.SearchTerm"
       asp-route-SortOrder="@ViewBag.SortOrder">Next</a>
</div>

