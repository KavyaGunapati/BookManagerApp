@{
}
@model BookManagerApp.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<h2>Delete Book</h2>

<h4>Are you sure you want to delete this book?</h4>
<div>
    <h5>@Model.Title by @Model.Author</h5>
    <p>Price: @Model.Price.ToString("C")</p>
    <p>Published: @Model.PublishedDate.ToShortDateString()</p>
</div>

<form asp-action="DeleteConfirm" method="post">
    <input type="hidden" asp-for="Id" />
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
   <a asp-action="List"> Cancel</a>
</form>
